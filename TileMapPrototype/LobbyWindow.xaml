<Window x:Class="TileMapPrototype.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LobbyWindow" Height="346" Width="300">
    <StackPanel>
        <TextBox Height="20" Name="tbAddPlayer" Margin="10"></TextBox>
        <Button Name="btnAddPlayer" Content="Join Game" Margin="10" Click="btnAddPlayer_Click"></Button>
        <TextBlock Margin="10,0,0,0">Players:</TextBlock>
        <ListBox Name="lbPlayers" Height="120" Margin="10,5,10,0"></ListBox>
        <Button Name="btnStart" Content="Start Game" Margin="10" Click="btnReady_Click"></Button>
    </StackPanel>
</Window>
